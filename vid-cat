#! /bin/bash
outfile=${1:-out.mkv}
seconds=0 #todo: increment this appropirately
for f in ./*.*; do
  echo "file '$f'" >>vidlist.tmp.txt;
  #that's taken care of. Now, for bookkeeping:
  echo $(date -ud "@$seconds" +%T) $(basename "$f") >>vidlist.timestamps.txt;
  duration=$(ffprobe -v error -show_entries format=duration -of default=noprint_wrappers=1:nokey=1 "$f")
  duration_seconds=${duration%\.*}
  seconds=$((seconds + duration_seconds))
done
ffmpeg -safe 0 -f concat -i vidlist.tmp.txt -c copy "$outfile"
rm vidlist.tmp.txt
